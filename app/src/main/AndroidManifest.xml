<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppOnline">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppOnline.NoActionBar">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppOnline.NoActionBar"/>
        <activity
            android:name=".DangNhapActivity"
            android:exported="true"
            android:label="Đăng Nhập"
            android:theme="@style/Theme.AppOnline.NoActionBar">
        </activity>

        <activity
            android:name=".DangKyActivity"
            android:label="Đăng Ký Tài Khoản"
            android:theme="@style/Theme.AppOnline.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="false"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

        <activity
            android:name=".ProductListActivity"
            android:label="Danh Sách Sản Phẩm"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

        <activity
            android:name=".ProductDetailActivity"
            android:label="Chi Tiết Sản Phẩm"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

        <activity
            android:name=".CartActivity"
            android:label="Giỏ Hàng"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

        <activity
            android:name=".CheckoutActivity"
            android:label="Thanh Toán"
            android:theme="@style/Theme.AppOnline.NoActionBar" />
        <activity android:name=".SelectAddressActivity"
            android:label="Chọn Địa Chỉ Nhận Hàng"
            android:theme="@style/Theme.AppOnline.NoActionBar" />
<activity android:name=".NewAddressActivity"
            android:label="Thêm Địa Chỉ Mới"
            android:theme="@style/Theme.AppOnline.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="Tim Kiếm Sản Phẩm"
            android:theme="@style/Theme.AppOnline.NoActionBar" />
        <activity
            android:name=".InvoiceActivity"
            android:label="Hóa Đơn"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

        <activity
            android:name=".OrdersHistoryActivity"
            android:label="Lịch Sử Đơn Hàng"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

        <activity
            android:name=".FavoriteActivity"
            android:label="Yêu Thích"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

        <activity
            android:name=".ProfileActivity"
            android:label="Cài Đặt Tài Khoản"
            android:theme="@style/Theme.AppOnline.NoActionBar" />

    </application>

</manifest>
